<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F9FD"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/tv_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Your Food Cart"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000" />
        </LinearLayout>

        <!-- Cart Item 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Image -->
                    <ImageView
                        android:id="@+id/img_product_1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/banhmi"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="8dp" />

                    <!-- Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_product_name_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bánh Mì Pate"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_product_price_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80000 VND"
                            android:textSize="17sp"
                            android:textColor="#555" />
                    </LinearLayout>

                    <!-- Quantity controls -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/btn_increase_1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/plus" />

                        <TextView
                            android:id="@+id/tv_quantity_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:gravity="center"
                            android:layout_marginVertical="4dp" />

                        <ImageView
                            android:id="@+id/btn_decrease_1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/minus" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/ic_delete"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_delete"
                        android:contentDescription="Delete"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Topping Selector -->
                <LinearLayout
                    android:id="@+id/topping_selector_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <CheckBox
                        android:id="@+id/topping_egg_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Egg (+10000 VND)" />

                    <CheckBox
                        android:id="@+id/topping_cheese_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="PATE (+10000 VND)" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Cart Item 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Image -->
                    <ImageView
                        android:id="@+id/img_product_2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/banhmi"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="8dp" />

                    <!-- Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_product_name_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bánh Mì Pate"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_product_price_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80000 VND"
                            android:textSize="17sp"
                            android:textColor="#555" />
                    </LinearLayout>

                    <!-- Quantity controls -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/btn_increase_2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/plus" />

                        <TextView
                            android:id="@+id/tv_quantity_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:gravity="center"
                            android:layout_marginVertical="4dp" />

                        <ImageView
                            android:id="@+id/btn_decrease_2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/minus" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/ic_delete_2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_delete"
                        android:contentDescription="Delete"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Topping Selector -->
                <LinearLayout
                    android:id="@+id/topping_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <CheckBox
                        android:id="@+id/topping_egg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Egg (+10000 VND)" />

                    <CheckBox
                        android:id="@+id/topping_cheese"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="PATE (+10000 VND)" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Promo Code -->
        <LinearLayout
            android:id="@+id/promo_code_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/et_promo_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Promo Code"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_apply_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Apply"
                android:backgroundTint="#007BFF"
                android:textColor="#FFF" />
        </LinearLayout>
        <!-- Phần Tính Tiền -->
        <LinearLayout
            android:id="@+id/summary_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <!-- Tổng Tiền Giỏ Hàng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_cart_total_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng tiền giỏ hàng:"
                    android:textSize="16sp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_cart_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="160.000 VND"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000" />
            </LinearLayout>

            <!-- Phí Giao Hàng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_delivery_fee_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phí giao hàng:"
                    android:textSize="16sp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_delivery_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15.000 VND"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000" />
            </LinearLayout>

            <!-- Tổng Thanh Toán -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_total_payment_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng thanh toán:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_total_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="175.000 VND"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#007BFF" />
            </LinearLayout>
        </LinearLayout>


        <!-- Proceed Button -->
        <Button
            android:id="@+id/btn_proceed_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proceed to Checkout"
            android:backgroundTint="#007BFF"
            android:textColor="#FFF"
            android:padding="12dp" />
    </LinearLayout>
    </ScrollView>
