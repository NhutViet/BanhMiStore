<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardCornerRadius="22dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="10dp"
        android:padding="7dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="10dp"
            >
            <ImageView
                android:id="@+id/imgOpProduct"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/banhmi"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/tvOpProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bánh Mì Pate"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvOpProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá: 80000 VND"
                android:textColor="#555"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvOpProductQuant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số lượng: 2 cái"
                android:textColor="#555"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>