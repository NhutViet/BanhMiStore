<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardCornerRadius="22dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="10dp"
        android:padding="15dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:layout_marginEnd="8dp"
                android:gravity="center">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txtPayoutIncreaseQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textSize="30sp"
                    android:gravity="center"
                     />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txtPayoutItemQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="18sp"
                    android:gravity="center"
                     />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txtPayoutDecreaseQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textSize="30sp"
                    android:gravity="center"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgItemPayout"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/banhmi"
                android:scaleType="fitCenter"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                />

            <LinearLayout
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtPayoutProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bánh Mì Pate"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPayoutProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80000 VND"
                    android:textColor="#555"
                    android:textSize="17sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtPayoutRemove"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="x"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="#EA9AB2"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/cardview_default_radius"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>